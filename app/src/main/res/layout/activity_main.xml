<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:isScrollContainer="true"
    android:scrollbars="vertical"
    android:background="@android:color/holo_green_dark"
    tools:context="tn.esprit.salmen.advancedintents.MainActivity">

    <LinearLayout
        android:id="@+id/LinearLayout1"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingVertical="@dimen/activity_vertical_margin"
        android:paddingHorizontal="@dimen/activity_horizontal_margin"
        tools:context=".MainActivity" >

        <Button
            android:id="@+id/Button01"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="5dp"
            android:onClick="callIntent"
            android:text="Launch Browser"
            android:textColor="@android:color/white" >
        </Button>

        <Button
            android:id="@+id/Button02"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="5dp"
            android:onClick="callIntent"
            android:text="Call Salmen"
            android:textColor="@android:color/white" >
        </Button>

        <Button
            android:id="@+id/Button03"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="5dp"
            android:onClick="callIntent"
            android:text="Show Map"
            android:textColor="@android:color/white" >
        </Button>

        <Button
            android:id="@+id/Button04"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="5dp"
            android:onClick="callIntent"
            android:text="Search on Map"
            android:textColor="@android:color/white" >
        </Button>

        <Button
            android:id="@+id/Button05"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="5dp"
            android:onClick="callIntent"
            android:text="Take picture"
            android:textColor="@android:color/white" >
        </Button>

        <Button
            android:id="@+id/Button06"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="5dp"
            android:onClick="callIntent"
            android:text="Show contacts"
            android:textColor="@android:color/white" >
        </Button>


        <Button
            android:id="@+id/Button07"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="5dp"
            android:onClick="callIntent"
            android:text="Open Media Player"
            android:textColor="@android:color/white" >
        </Button>

        <Button
            android:id="@+id/Button08"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="5dp"
            android:onClick="callIntent"
            android:text="Play media from file"
            android:textColor="@android:color/white" >
        </Button>
    </LinearLayout>

</ScrollView>
